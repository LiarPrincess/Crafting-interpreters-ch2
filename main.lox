print "> Fibonacci rec - should print: 0, 1, 1, 2, 3, 5, 8";
fun fibonacci(n) {
  if (n <= 1) return n;
  return fibonacci(n - 2) + fibonacci(n - 1);
}

for (var i = 0; i < 7; i = i + 1) {
  print fibonacci(i);
}

